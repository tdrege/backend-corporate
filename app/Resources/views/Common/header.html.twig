{# src/Savills/AppelOffreBundle/Resources/views/Common/header.html.twig #}

<div class="page-header navbar navbar-fixed-top">
    <div class="page-header-inner ">
        <div class="page-logo">
            <a href="{% if is_granted("ROLE_ADMIN") %}#{% else %}#{% endif %}">
                <img src="{{ asset('assets/img/arval.png') }}" alt="logo"
                     class="logo-default"/>
            </a>
            <div class="menu-toggler sidebar-toggler"></div>
        </div>
        <a href="javascript:;" class="menu-toggler responsive-toggler" data-toggle="collapse"
           data-target=".navbar-collapse"> </a>
        <div class="top-menu">

            <ul class="nav navbar-nav pull-right">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li class="dropdown dropdown-user">

                        <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown"
                           data-close-others="true">

                            <span class="username username-hide-on-mobile">  {{ app.user.username }} </span>
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-default">
                            <li>
                                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") and is_granted("ROLE_ADMIN") %}
                                    <a href="">
                                        <i class="icon-user"></i> Mon compte
                                    </a>
                                {% else %}
                                    <a href="">
                                        <i class="icon-user"></i> Mon compte
                                    </a>
                                {% endif %}
                            </li>
                        </ul>
                    </li>
                {% endif %}
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <li class="dropdown dropdown-quick-sidebar-toggler">
                    <a href="{{ path('logout') }}" class="dropdown-toggle">
                        <i class="icon-logout"></i>
                    </a>
                </li>
                {% endif %}
            </ul>
        </div>
    </div>
</div>
<div class="clearfix"></div>